{
  "workbench.iconTheme": "vscode-great-icons",
  "terminal.integrated.tabs.defaultColor": "terminal.ansiGreen",
  "terminal.integrated.automationProfile.linux": null,
  "workbench.colorCustomizations": {
    "terminal.foreground": "#00FF9D",
    "terminalCursor.foreground": "#00FF9D"
  },
  "files.autoSave": "afterDelay",
  "editor.fontSize": 16,
  "editor.fontFamily": "ComicShannsMono Nerd Font Mono",
  "editor.wordWrap": "on",
  "editor.formatOnPaste": true,
  "editor.formatOnSave": true,
  "editor.rulers": [],
  "pythonIndent.trimLinesWithOnlyWhitespace": true,
  "[python]": {
    "editor.formatOnSave": true,
    "editor.formatOnPaste": true,
    "editor.defaultFormatter": "charliermarsh.ruff",
    "editor.tabSize": 4,
    "editor.insertSpaces": true,
    "editor.codeActionsOnSave": {
      "source.fixAll": "always",
      "source.organizeImports": true
    }
  },

  "editor.guides.bracketPairs": true,

  "files.associations": {
    "*.html": "jinja-html"
  },

  "emmet.includeLanguages": {
    "javascript": "javascriptreact",
    "jinja-html": "html"
  },
  "ruff.importStrategy": "fromEnvironment",
  "ruff.lint.run": "onType",
  "ruff.trace.server": "messages",
  "editor.codeActionWidget.includeNearbyQuickfixes": true,
  "editor.formatOnType": true,
  "editor.bracketPairColorization.independentColorPoolPerBracketType": true,
  "editor.language.colorizedBracketPairs": [],
  "pythonIndent.keepHangingBracketOnLine": true
}
