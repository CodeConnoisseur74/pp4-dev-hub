{
  "workbench.iconTheme": "hotline-technicolor",
  "terminal.integrated.tabs.defaultColor": "terminal.ansiMagenta",
  "terminal.integrated.automationProfile.linux": null,
  "workbench.colorCustomizations": {
    "terminal.foreground": "#c79bff",
    "terminalCursor.foreground": "#c79bff"
  },
  "files.autoSave": "afterDelay",
  "editor.fontSize": 16,
  "editor.fontFamily": "ComicShannsMono Nerd Font Mono",
  "editor.wordWrap": "on",
  "editor.formatOnPaste": false,
  "editor.formatOnSave": true,
  "editor.rulers": [
    119
  ],
  "pythonIndent.trimLinesWithOnlyWhitespace": true,
  "[python]": {
    "editor.formatOnSave": true,
    "editor.formatOnPaste": true,
    "editor.defaultFormatter": "charliermarsh.ruff",
    "editor.tabSize": 4,
    "editor.insertSpaces": true,
    "editor.codeActionsOnSave": {
      "source.fixAll": "always",
      "source.organizeImports": "explicit"
    }
  },
  "editor.guides.bracketPairs": true,
  "emmet.includeLanguages": {
    "javascript": "javascriptreact",
    "django-html": "html",
    "html": "html"
  },
  "editor.formatOnType": false,
  "editor.bracketPairColorization.independentColorPoolPerBracketType": true,
  "editor.language.colorizedBracketPairs": [],
  "pythonIndent.keepHangingBracketOnLine": true,
  "editor.fontWeight": "bold",
  "terminal.integrated.fontFamily": "ComicShannsMono Nerd Font Mono",
  "terminal.integrated.fontSize": 16,
  "files.associations": {
    "**/views/**/*.html": "django-html",
    "*.tpl": "django-html"
  },
  "[django-html]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "junstyle.vscode-django-support"
  },
  "html.format.templating": true,
  "ruff.lint.run": "onSave",
  "workbench.commandPalette.experimental.suggestCommands": true,
  "workbench.editor.enablePreviewFromQuickOpen": true,
  "workbench.editor.enablePreviewFromCodeNavigation": true,
  "powermode.enabled": true,
  "powermode.combo.location": "off",
  "powermode.combo.counterEnabled": "hide",
  "powermode.combo.timerEnabled": "hide",
  "powermode.shake.intensity": 0,
  "editor.defaultFormatter": "junstyle.vscode-django-support",
  "django.snippets.exclude": [
    "cms",
    "wagtail"
  ],
  "[jsonc]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },
  "ruff.lint.args": [
    "--unfixable=F401"
  ],
  "html.format.wrapLineLength": 119,
}