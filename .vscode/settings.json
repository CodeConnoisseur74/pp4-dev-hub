{
  "workbench.iconTheme": "vscode-great-icons",
  "terminal.integrated.tabs.defaultColor": "terminal.ansiGreen",
  "terminal.integrated.automationProfile.linux": null,
  "workbench.colorCustomizations": {
    "terminal.foreground": "#00FF9D",
    "terminalCursor.foreground": "#00FF9D"
  },
  "files.autoSave": "afterDelay",
  "editor.fontSize": 16,
  "editor.fontFamily": "ComicShannsMono Nerd Font Mono",
  "editor.wordWrap": "on",
  "editor.formatOnPaste": true,
  "editor.formatOnSave": true,
  "editor.rulers": [],
  "pythonIndent.trimLinesWithOnlyWhitespace": true,
  "[python]": {
    "editor.defaultFormatter": "charliermarsh.ruff",
    "editor.formatOnSave": true
  },

  "editor.guides.bracketPairs": true,

  "files.associations": {
    "*.html": "jinja-html",
  },

   "emmet.includeLanguages": {
    "javascript": "javascriptreact",
    "jinja-html": "html"
  }
}
