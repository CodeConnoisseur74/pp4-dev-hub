{
  "workbench.iconTheme": "hotline-wired-alt",
  "terminal.integrated.tabs.defaultColor": "terminal.ansiGreen",
  "terminal.integrated.automationProfile.linux": null,
  "workbench.colorCustomizations": {
    "terminal.foreground": "#00FF9D",
    "terminalCursor.foreground": "#00FF9D"
  },
  "files.autoSave": "afterDelay",
  "editor.fontSize": 16,
  "editor.fontFamily": "ComicShannsMono Nerd Font Mono",
  "editor.wordWrap": "on",
  "editor.formatOnPaste": true,
  "editor.formatOnSave": true,
  "editor.rulers": [],
  "pythonIndent.trimLinesWithOnlyWhitespace": true,
  "[python]": {
    "editor.formatOnSave": true,
    "editor.formatOnPaste": true,
    "editor.defaultFormatter": "charliermarsh.ruff",
    "editor.tabSize": 4,
    "editor.insertSpaces": true,
    "editor.codeActionsOnSave": {
      "source.fixAll": "always",
      "source.organizeImports": true
    }
  },

  "editor.guides.bracketPairs": true,

  "files.associations": {
    "*.html": "jinja-html"
  },
"[html][django-html][handlebars][hbs][mustache][jinja][jinja-html][nj][njk][nunjucks][twig]": {
  "editor.defaultFormatter": "monosans.djlint"
},
  "emmet.includeLanguages": {
    "javascript": "javascriptreact",
    "jinja-html": "html",
    "django-html": "html"
  },
  "editor.formatOnType": true,
  "editor.bracketPairColorization.independentColorPoolPerBracketType": true,
  "editor.language.colorizedBracketPairs": [],
  "pythonIndent.keepHangingBracketOnLine": true,

"editor.fontWeight": "bold",
"terminal.integrated.fontFamily": "ComicShannsMono Nerd Font Mono",
"terminal.integrated.fontSize": 16,
"djlint.closeVoidTags": true,
"djlint.enableLinting": true,
"djlint.ignore": [
  "H006,H014,H015,H021,H023,H025,H029",
  "J018",
  "H030,H031"
],
"djlint.useEditorIndentation": true,
"editor.codeActionWidget.includeNearbyQuickFixes": true
}
